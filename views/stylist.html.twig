<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link href="https://fonts.googleapis.com/css?family=Baloo|Comfortaa" rel="stylesheet">
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/styles.css">
        <title>Hair Salon</title>
    </head>
    <body>
        <div class='breadcrumbs'><a href='/'>Home</a> &gt; {{ stylist.getName }}</div>
        <div class='container'>
            <h1>Hair Salon</h1>
            <h2>{{ stylist.getName }}</h2>
            {% if clients is not empty %}
            <h3>Clients:</h3>
            <p>(Click to Edit)</p>
            <ul>
                {% for client in clients %}
                    <li><a href='/client/edit/{{ client.getId }}'>{{ client.getName }}</a></li>
                {% endfor %}
            </ul>
            {% endif %}
            <form action='/stylist/{{ stylist.getId }}' method='post'>
                <h3>Add a New Client</h3>
                <label for='name'>Clients's Name:</label>
                <input type='text' id='name' name='name'>
                <button type='submit' class='btn btn-success'>Add</button>
            </form>
            <a href='/stylist/edit/{{ stylist.getId }}'><button type='button' class='btn btn-primary'>Edit this Stylist</button></a>
            <form action='/stylist/{{ stylist.getId }}' method='post'>
                <input name="_method" type="hidden" value="delete">
                <button type='submit' class='btn btn-danger'>Remove This Stylist</button>
            </form>
        </div>
    </body>
</html>
